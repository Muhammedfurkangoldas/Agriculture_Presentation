@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">

                    @Html.HiddenFor(x => x.ContactID)

                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" class="form-control" placeholder="AdSoyad" asp-for="Name">
                </div>
                <div class="form-group">

                    @Html.HiddenFor(x => x.ContactID)

                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="email" class="form-control" placeholder="example@gmail.com" asp-for="Mail">
                </div>
                <div class="form-group">

                    @Html.HiddenFor(x => x.ContactID)

                    <label for="exampleInputName1">Tarih</label>
                    <input type="date" class="form-control" placeholder="01.01.2023" asp-for="Date">
                </div>
                <div class="form-group">

                    @Html.HiddenFor(x => x.ContactID)

                    <label for="exampleInputName1">Mesaj Detayı</label>
                    <textarea class="form-control" cols="5" rows="20" asp-for="Message"></textarea>
                </div>
            </form>
            <br />
            <a href="/Contact/Index" class="btn btn-outline-info">Listeye Geri Dön</a>
        </div>
    </div>
</div>

